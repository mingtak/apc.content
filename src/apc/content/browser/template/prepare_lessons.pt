<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="apc.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">


<script>
(function($) { $(function() {
    // Set up overlays if Plone < 5
    try {
        $('#poi-login-form').prepOverlay({
            subtype: 'ajax',
            filter: '#content>*',
            formselector: '#content-core > form',
            noform: 'reload',
            closeselector: '[name=form.buttons.cancel]',
        });
    } catch (e) {
        // do nothing, the 'pat-plone-modal' class will display the overlay
    }

    // Add file upload to Issue edit view
    if ($('.template-edit.portaltype-issue')) {
        $.get( "@@poi_issue_uploads", function( data ) {
            $('.template-edit.portaltype-issue').find('#formfield-form-widgets-steps').after(data);
            require(['pat-registry'], function (registry) {
                registry.scan($('#formfield-form-widgets-attachments'));
            });
        });
    }
    
    // require(['mockup-patterns-tinymce']);
    require(['tinymce'], function(){
        tinymce.init({
          selector: '.pat-tinymce',
          height: 500,
          plugins: [
            'advlist autolink lists link image charmap print preview anchor',
            'searchreplace visualblocks code fullscreen',
            'insertdatetime media table contextmenu paste code'
          ],
          toolbar: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image'
        });
    });


}); })(jQuery);
</script>


<form method="POST" enctype="multipart/form-data">
  <div class="pat-autotoc autotabs"
       data-pat-autotoc="section:fieldset;levels:legend;">
    <fieldset>
      <legend>課程大綱</legend>
      <table>
        <tr>
          <td colspan=4>
            <p>課程大綱</p>
          </td>
        </tr>
        <tr>
          <td colspan=4>
            <textarea name="course_outline" class="pat-tinymce"
                      data-pat-tinymce='{"relatedItems": {
                                            "vocabularyUrl": "/relateditems-test.json"
                                        }}'>
              <tal:content tal:condition="python: view.getCourse().course_outline" tal:content="python: view.getCourse().course_outline.raw" />
            </textarea>
          </td>
        </tr>
      </table>
    </fieldset>
    <fieldset>
      <legend>課堂備課</legend>
      <table>
        <input type="hidden" name="file-upload-widget">
        <tr>
            <td>
              <p>上課日期</p>
            </td>
            <td>
              <p>上傳檔案</p>
            </td>
            <td>
              <p>目前檔案</p>
            </td>
            <td>
            </td>
        </tr>
        <tal:repeat tal:repeat="item view/getPrepare">
          <tr>
              <td>
                <p>${item/Title}</p>
              </td>
              <td>
                <input type="file" name="file-${item/UID}" accept="application/pdf">
              </td>
              <td>
                <a tal:condition="python: item.getObject().file" href="${item/getURL}/@@download/file">${python: item.getObject().file.filename}</a>
              </td>
              <td rowspan=2>
                <input type="submit" value="send" style="float:right;" i18n:attributes="value">
              </td>
          </tr>
          <tr>
            <td >
              <p>課程主題</p>
            </td>
            <td colspan=2>
              <textarea name="text-${item/UID}" cols="40" rows="5">${python: item.getObject().description}</textarea>
            </td>
          </tr>
        </tal:repeat>
      </table>
    </fieldset>
  </div>
  <div style="height: 50px;">
    <input type="submit" value="all send" style="float:right;" i18n:attributes="value">
  </div>
</form>

</metal:content-core>
</metal:content-core>

</body>
</html>


