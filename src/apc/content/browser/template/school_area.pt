<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="apc.content">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
portal = api.portal.get()
?>
  <div style="height: 50px;">
      <span style="float:left;"><b style="color:blue">${view/school/Title}</b></span>
      <button class="btn context" style="float:right;" onclick="logout()">登出</button>
  </div>

  <div class="pat-autotoc autotabs" data-pat-autotoc="section:fieldset;levels:legend;">
    <tal:course tal:define="course view/getCourse;" >
      <fieldset>
        <legend >學校聯絡人</legend>
        <div class="prepare">
          <form method="POST">
            <div class="tr-list row">
              <div class="col-sm-2" style="text-align:right;">
                <p>學校聯絡人 姓名:</p>
              </div>
              <div class="col-sm-8">
                ${python:view.school.name if view.school.name else '尚未填寫'}
              </div>
            </div>
            <div class="tr-list row">
              <div class="col-sm-2" style="text-align:right;">
                <p>學校聯絡人 電話:</p>
              </div>
              <div class="col-sm-8">
                ${python:view.school.telephone if view.school.telephone else '尚未填寫'}
              </div>
            </div>
            <div class="tr-list row">
              <div class="col-sm-2" style="text-align:right;">
                <p>學校聯絡人 手機:</p>
              </div>
              <div class="col-sm-8">
                ${python:view.school.phone if view.school.phone else '尚未填寫'}
              </div>
            </div>
            <div class="tr-list row">
              <div class="col-sm-2" style="text-align:right;">
                <p>學校聯絡人Email:</p>
              </div>
              <div class="col-sm-8">
                ${python:view.school.email if view.school.email else '尚未填寫'}
              </div>
              <div class="col-sm-2">
<a href="${view/request/URL}_edit?uid=${view/school_uid}">編輯</a>
              </div>
            </div>
            <div class="border-solid" />
          </form>
        </div>
</fieldset>

<fieldset>
        <legend >本學期課程</legend>


          <tal:repeat tal:repeat="item course">
            <tal:define tal:define="obj item/getObject;
                                    item_title item/Title;
                                    item_url item/getURL;
                                    item_uid item/UID;
                                    item_id item/id;">
              <div class="prepare">
                <div class="tr-list row">
                  <div class="col-sm-4 col-md-2">
                    <li class="publish-date">
                      ${python:item_id[0:6]}
                    </li>
                  </div>
                  <div class="col-sm-4 col-md-4">
                    <a href="${item_url}" class="title">${python:item_title[6:]}</a>
                  </div>
                  <div class="col-sm-4 col-md-6">
                  <div class="col-xs-3">
                    <h4>學生名單</h4>
                    <div tal:content="structure python: view.getNamelist(obj)['nameList'].replace('\n', '<br>')"></div>
                  </div>
                  </div>
                </div>
                <div class="border-solid" />
              </div>
            </tal:define>
          </tal:repeat>
<a href="${view/request/URL}_edit?uid=${view/school_uid}#autotoc-item-autotoc-1">編輯</a>

      </fieldset>
    </tal:course>
  </div>



</metal:content-core>
</metal:content-core>

</body>
</html>
